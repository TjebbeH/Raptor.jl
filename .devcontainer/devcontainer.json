{
  "name": "Julia Dev Container",
  "image": "debian:bullseye",
  "features": {
    "ghcr.io/julialang/devcontainer-features/julia:1": {
      "channel": "release"
    }
  },
  "workspaceFolder": "/home/Raptor",
  //  "mounts": [
  //    "source=${localWorkspaceFolder},target=/home/Raptor,type=bind,consistency=cached"
  //  ],
  "runArgs": [
    "--env-file",
    "variables.env"
  ],
  "postCreateCommand": "julia -e 'using Pkg; Pkg.instantiate()'; bash julia_setup.sh; git_setup.sh",
}

